# Archie Guardian - Environment Configuration Example
# Copy this to .env and modify for your setup

# ============================================================================
# OLLAMA CONFIGURATION
# ============================================================================
OLLAMA_BASE_URL=http://localhost:*****
OLLAMA_MODEL=llama3
OLLAMA_TIMEOUT=180

# ============================================================================
# GUARDIAN CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/audit.log
CHAT_HISTORY_FILE=logs/chat_history.json

# ============================================================================
# PERMISSION LEVELS (default)
# ============================================================================
# Options: observe, alert, analyze, isolate, auto_respond
DEFAULT_PERMISSION_LEVEL=observe

# ============================================================================
# WIDGET CONFIGURATION
# ============================================================================
# File Integrity: Paths to monitor
FILE_INTEGRITY_PATHS=~/Documents,~/Downloads,~/Projects

# ============================================================================
# SECURITY & LOGGING
# ============================================================================
ENABLE_AUDIT_LOGGING=true
MAX_LOG_SIZE=10485760  # 10MB in bytes
ARCHIVE_OLD_LOGS=true
